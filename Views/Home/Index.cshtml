@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home-container {
        text-align: center;
        margin-top: 60px;
    }
    .home-container h1 {
        font-size: 2.5rem;
        color: #495057;
        margin-bottom: 20px;
    }
    .home-container p {
        font-size: 1.2rem;
        color: #6c757d;
        margin-bottom: 25px;
    }
    .btn-container a {
        display: inline-block;
        margin: 10px;
        padding: 12px 25px;
        font-size: 1rem;
        border-radius: 6px;
        text-decoration: none;
        color: #fff;
    }
    .btn-primary {
        background-color: #3d79ae;
        border: none;
    }
    .btn-primary:hover {
        background-color: hsl(194, 56%, 32%);
    }
    .btn-success {
        background-color: #9d7d2c;
        border: none;
    }
    .btn-success:hover {
        background-color: #76701d;
    }
</style>

<div class="home-container">
    <h1 class="display-4">Welcome to Course Manager</h1>
    <p>Manage your courses easily or create a new one.</p>

    <div class="btn-container">
        <a href="/Course" class="btn-primary">Manage Courses</a>
        <a href="/Course/Create" class="btn-success">Create New Course</a>
    </div>
</div>
